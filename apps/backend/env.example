# iNEAT ERP Community Edition - Environment Variables
# Copy this file to .env and update the values

# Django Configuration
DJANGO_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (Single Database)
DATABASE_URL=postgresql://ineat_user:ineat_password@localhost:5432/ineat_erp
POSTGRES_DB=ineat_erp
POSTGRES_USER=ineat_user
POSTGRES_PASSWORD=ineat_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# Web3 Configuration (Optional - for blockchain features)
WEB3_ENABLED=False
WEB3_PROVIDER_URL=https://goerli.infura.io/v3/your-infura-key
WEB3_NETWORK_ID=5
WEB3_PRIVATE_KEY=your-private-key-here

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# File Storage
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
STATIC_URL=/static/

# Celery Configuration (Optional - for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# API Configuration
API_DOCS_ENABLED=True

# Production Settings (for production deployment)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True
