# iNeat ERP Community Edition - Environment Configuration
# Copy this file to .env and update the values for your setup

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
DJANGO_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development with Docker
DATABASE_URL=postgresql://ineat_user:ineat_password@db:5432/ineat_erp

# For external database (production)
# DATABASE_URL=postgresql://username:password@host:port/database_name

POSTGRES_DB=ineat_erp
POSTGRES_USER=ineat_user
POSTGRES_PASSWORD=ineat_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# For local development with Docker
REDIS_URL=redis://redis:6379/0

# For external Redis (production)
# REDIS_URL=redis://username:password@host:port/db

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# WEB3 CONFIGURATION (Optional)
# =============================================================================
WEB3_ENABLED=False
WEB3_PROVIDER_URL=https://goerli.infura.io/v3/your-infura-key
WEB3_NETWORK_ID=5
WEB3_PRIVATE_KEY=your-private-key-here

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# FILE STORAGE
# =============================================================================
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
STATIC_URL=/static/

# =============================================================================
# CELERY CONFIGURATION (Optional)
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_DOCS_ENABLED=True

# =============================================================================
# PRODUCTION SETTINGS (Uncomment for production)
# =============================================================================
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# X_FRAME_OPTIONS=DENY

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS
# =============================================================================
# For Vercel deployment
# VERCEL_URL=your-app.vercel.app

# For Render deployment
# RENDER_EXTERNAL_URL=https://your-app.onrender.com

# For DigitalOcean App Platform
# DO_APP_URL=https://your-app.ondigitalocean.app

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# SENTRY_DSN=your-sentry-dsn-here
# GOOGLE_ANALYTICS_ID=your-ga-id-here
